<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/phone_listitem_layout_b"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_item_style"
    android:padding="8dp" >

    <LinearLayout
        android:id="@+id/phone_listitem_b_linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/phone_listitem_nametxt_b"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="软件学院"
            android:textColor="@color/font_2"
            android:textSize="14sp" >
        </TextView>

        <TextView
            android:id="@+id/phone_listitem_addresstxt_b"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:drawableLeft="@drawable/ic_location_green"
            android:drawablePadding="4dp"
            android:singleLine="true"
            android:text="3号教学楼3层"
            android:textColor="@color/font_3"
            android:textSize="12sp" >
        </TextView>

        <TextView
            android:id="@+id/phone_listitem_emailtxt_b"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:drawableLeft="@drawable/ic_mail_green"
            android:drawablePadding="6dp"
            android:singleLine="true"
            android:text="yuhang@bit.edu.cn"
            android:textColor="@color/font_3"
            android:textSize="12sp" >
        </TextView>
    </LinearLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:src="@drawable/item_right_arrow" >
    </ImageView>

</RelativeLayout>