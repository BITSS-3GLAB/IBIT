<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aboutusrelativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E0E0E0"
    android:padding="16dp" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/aboutusimageView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/about_us" />

            <TextView
                android:id="@+id/about_us_version"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="北京理工大学校园通3.0.2"
                android:textColor="@color/font_2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/about_us_mail"
                android:layout_width="fill_parent"
                android:layout_height="34dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:drawableLeft="@drawable/ic_mail_green"
                android:drawablePadding="6dp"
                android:gravity="center|left"
                android:padding="6dp"
                android:text="wcwbit@gmail.com"
                android:textColor="@color/font_2" />

            <TextView
                android:id="@+id/about_us_phone"
                android:layout_width="fill_parent"
                android:layout_height="34dp"
                android:layout_marginTop="0.7dp"
                android:background="#ffffff"
                android:drawableLeft="@drawable/ic_phone_green"
                android:drawablePadding="6dp"
                android:gravity="center|left"
                android:padding="6dp"
                android:text="010-68914044"
                android:textColor="@color/font_2" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#ffffff"
                android:padding="8dp"
                android:text="@string/about_us_content"
                android:textColor="@color/font_2"
                android:textSize="14sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="8dp"
                android:text="项目设计：北理软件学院3G移动开发实验室"
                android:textColor="@color/font_2"
                android:textSize="14sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="8dp"
                android:text="@string/dev_person"
                android:textColor="@color/font_2"
                android:textSize="14sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="8dp"
                android:text="界面设计：张璐 华思航"
                android:textColor="@color/font_2"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>