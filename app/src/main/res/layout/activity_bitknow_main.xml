<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <include
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/bitknow_main_back" />
 
        <LinearLayout
        android:id="@+id/select_tab"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/title_bar"
        android:gravity="center"
        android:background="@drawable/box2"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/suggest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="推荐"
                android:textColor="@color/font_4"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/suggest_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/bottom_bar" />
   
        </RelativeLayout>
        
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/font_3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

       <RelativeLayout
            android:id="@+id/right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
            
            <TextView
                android:id="@+id/lastest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="最新"
                android:textColor="@color/font_3"
                android:textSize="20sp" />
            
           <ImageView
                android:id="@+id/lastest_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                android:src="@drawable/bottom_bar" />
        </RelativeLayout>
 
    </LinearLayout>

    <include 
        android:id = "@+id/bitknow_search_bar"
        android:layout_below="@id/select_tab"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout = "@layout/bitknow_main_search"/>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/bitknow_know_pull_to_refresh_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:cacheColorHint="#00000000"
        android:descendantFocusability="blocksDescendants"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:listSelector="@android:color/transparent"
        android:overScrollMode="never"
        android:smoothScrollbar="true"
        android:layout_below="@id/bitknow_search_bar" />
</RelativeLayout>
